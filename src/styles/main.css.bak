@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@500;600;700&display=swap');

:root {
  /* Colors */
  --primary: #10b981;
  --primary-light: #34d399;
  --primary-dark: #059669;
  --secondary: #3b82f6;
  --accent: #f97316;
  --warning: #f59e0b;
  --danger: #ef4444;
  --success: #10b981;
  --dark: #1f2937;
  --light: #f9fafb;
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;

  /* Spacing */
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 12px;
  --spacing-lg: 16px;
  --spacing-xl: 24px;
  --spacing-2xl: 32px;
  --spacing-3xl: 48px;

  /* Border Radius */
  --radius-sm: 4px;
  --radius-md: 8px;
  --radius-lg: 12px;
  --radius-xl: 16px;
  --radius-full: 9999px;

  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);

  /* Transitions */
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 16px;
  scroll-behavior: smooth;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--light);
  color: var(--dark);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ============================================
   TYPOGRAPHY
   ============================================ */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Poppins', sans-serif;
  font-weight: 700;
  line-height: 1.2;
  color: var(--dark);
}

h1 {
  font-size: clamp(1.75rem, 5vw, 2.5rem);
  margin-bottom: var(--spacing-md);
  letter-spacing: -0.02em;
}

h2 {
  font-size: clamp(1.5rem, 4vw, 2rem);
  margin-bottom: var(--spacing-md);
}

h3 {
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  margin-bottom: var(--spacing-sm);
}

p {
  font-size: 0.95rem;
  color: var(--gray-600);
  margin-bottom: var(--spacing-md);
}

/* ============================================
   SIDEBAR
   ============================================ */
.sidebar {
  width: 260px;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  min-height: 100vh;
  padding: var(--spacing-lg) var(--spacing-md);
  color: white;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  box-shadow: var(--shadow-lg);
  overflow-y: auto;
  transition: var(--transition);
}

.sidebar h2 {
  margin: 0 0 var(--spacing-2xl) 0;
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  color: white;
  font-weight: 700;
}

.sidebar nav {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.sidebar nav a {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  color: rgba(255, 255, 255, 0.85);
  text-decoration: none;
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-lg);
  transition: var(--transition);
  font-weight: 500;
  font-size: 0.95rem;
  position: relative;
}

.sidebar nav a:hover,
.sidebar nav a.active {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  transform: translateX(4px);
}

.sidebar nav a.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 3px;
  background: white;
  border-radius: 0 3px 3px 0;
}

/* ============================================
   NAVBAR
   ============================================ */
.navbar {
  height: 70px;
  background: white;
  padding: 0 var(--spacing-xl);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 260px;
  position: fixed;
  top: 0;
  right: 0;
  left: 260px;
  z-index: 999;
  box-shadow: var(--shadow-md);
  gap: var(--spacing-lg);
}

.navbar h3 {
  margin: 0;
  font-size: clamp(1rem, 2vw, 1.25rem);
  color: var(--dark);
}

.navbar-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  margin-left: auto;
}

.profile-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-weight: 500;
  color: var(--dark);
  min-width: 0;
}

.profile-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: clamp(0.85rem, 1vw, 1rem);
}

.btn-logout {
  padding: var(--spacing-md);
  background: var(--danger);
  color: white;
  border: none;
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0;
}

.btn-logout:hover {
  background: #dc2626;
  transform: scale(1.05);
}

/* ============================================
   MAIN CONTENT
   ============================================ */
.main-content {
  margin-left: 260px;
  margin-top: 70px;
  padding: clamp(1.5rem, 4vw, 2rem);
  min-height: calc(100vh - 70px);
  background: var(--light);
}

/* ============================================
   LOADING SCREEN
   ============================================ */
.loading-screen {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: var(--light);
  font-size: 1.25rem;
  color: var(--primary);
  font-weight: 600;
}

/* ============================================
   STAT CARDS
   ============================================ */
.cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(clamp(280px, 22vw, 320px), 1fr));
  gap: clamp(1rem, 2vw, 1.5rem);
  margin-bottom: var(--spacing-2xl);
}

.stat-card {
  background: white;
  padding: clamp(1.25rem, 3vw, 1.75rem);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  border-left: 4px solid var(--primary);
  transition: var(--transition);
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100px;
  height: 100px;
  background: var(--primary);
  opacity: 0.05;
  border-radius: 50%;
  transform: translate(30%, -30%);
}

.stat-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-lg);
}

.stat-card.income {
  border-left-color: var(--success);
}

.stat-card.expense {
  border-left-color: var(--accent);
}

.stat-card.savings {
  border-left-color: var(--secondary);
}

.stat-card-label {
  font-size: clamp(0.75rem, 1.5vw, 0.85rem);
  color: var(--gray-500);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--spacing-xs);
  font-weight: 600;
}

.stat-card-value {
  font-size: clamp(1.75rem, 4vw, 2.25rem);
  font-weight: 700;
  color: var(--dark);
  font-family: 'Poppins', sans-serif;
}

.stat-card-icon {
  font-size: clamp(1.5rem, 3vw, 2rem);
  margin-bottom: var(--spacing-sm);
  opacity: 0.8;
}

/* ============================================
   TABLES
   ============================================ */
.table-container {
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  margin-bottom: var(--spacing-2xl);
}

.table {
  margin: 0;
  width: 100%;
  border-collapse: collapse;
  font-size: clamp(0.85rem, 1vw, 0.95rem);
}

.table thead {
  background: var(--gray-50);
  border-bottom: 2px solid var(--gray-200);
}

.table th {
  padding: clamp(0.75rem, 2vw, 1rem);
  text-align: left;
  font-weight: 600;
  color: var(--gray-700);
  font-size: clamp(0.8rem, 1.5vw, 0.95rem);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.table td {
  padding: clamp(0.75rem, 2vw, 1rem);
  border-bottom: 1px solid var(--gray-200);
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.table tbody tr:hover {
  background: var(--gray-50);
}

.table tbody tr:last-child td {
  border-bottom: none;
}

/* ============================================
   BUTTONS
   ============================================ */
.btn {
  padding: clamp(0.5rem, 1.5vw, 0.75rem) clamp(1rem, 2vw, 1.5rem);
  border: none;
  border-radius: var(--radius-lg);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  font-size: clamp(0.85rem, 1.5vw, 0.95rem);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  white-space: nowrap;
}

.btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-primary {
  background: var(--primary);
  color: white;
}

.btn-primary:hover:not(:disabled) {
  background: var(--primary-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn-secondary {
  background: var(--secondary);
  color: white;
}

.btn-secondary:hover:not(:disabled) {
  background: #2563eb;
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn-danger {
  background: var(--danger);
  color: white;
}

.btn-danger:hover:not(:disabled) {
  background: #dc2626;
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn-block {
  width: 100%;
}

.btn-sm {
  padding: clamp(0.35rem, 1vw, 0.5rem) clamp(0.75rem, 1.5vw, 1rem);
  font-size: clamp(0.8rem, 1vw, 0.85rem);
}

/* ============================================
   FORMS
   ============================================ */
.form-group {
  margin-bottom: var(--spacing-lg);
}

.form-label {
  display: block;
  margin-bottom: var(--spacing-sm);
  font-weight: 600;
  color: var(--dark);
  font-size: clamp(0.85rem, 1.5vw, 0.95rem);
}

.form-control {
  width: 100%;
  padding: clamp(0.5rem, 1.5vw, 0.75rem) clamp(0.75rem, 1.5vw, 1rem);
  border: 1px solid var(--gray-300);
  border-radius: var(--radius-lg);
  font-family: inherit;
  font-size: clamp(0.85rem, 1.5vw, 0.95rem);
  transition: var(--transition);
  background: white;
}

.form-control:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
}

.form-control:disabled {
  background: var(--gray-100);
  color: var(--gray-500);
  cursor: not-allowed;
}

.form-control select {
  cursor: pointer;
}

/* ============================================
   CHARTS
   ============================================ */
.chart-container {
  background: white;
  padding: clamp(1.25rem, 3vw, 2rem);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--spacing-2xl);
}

.chart-title {
  font-size: clamp(1.1rem, 2.5vw, 1.5rem);
  font-weight: 700;
  margin-bottom: var(--spacing-lg);
  color: var(--dark);
}

/* ============================================
   ALERTS
   ============================================ */
.alert {
  padding: clamp(0.75rem, 2vw, 1rem) clamp(1rem, 2vw, 1.5rem);
  border-radius: var(--radius-lg);
  margin-bottom: var(--spacing-lg);
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  font-size: clamp(0.85rem, 1.5vw, 0.95rem);
  font-weight: 500;
}

.alert-error {
  background: #fee2e2;
  color: #991b1b;
  border: 1px solid #fecaca;
}

.alert-success {
  background: #dcfce7;
  color: #166534;
  border: 1px solid #bbf7d0;
}

.alert-warning {
  background: #fef3c7;
  color: #92400e;
  border: 1px solid #fde68a;
}

/* ============================================
   AUTH PAGES
   ============================================ */
.auth-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
  padding: clamp(1rem, 3vw, 2rem);
}

.auth-card {
  background: white;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
  padding: clamp(1.5rem, 5vw, 2.5rem);
  width: 100%;
  max-width: 420px;
  animation: slideUp 0.5s ease-out;
}

.auth-card-wide {
  max-width: 600px;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.auth-header {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
}

.auth-icon {
  color: var(--primary);
  margin-bottom: var(--spacing-md);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.auth-header h1 {
  margin-bottom: var(--spacing-sm);
  font-size: clamp(1.75rem, 4vw, 2.25rem);
}

.auth-header p {
  margin: 0;
  color: var(--gray-600);
  font-size: clamp(0.9rem, 1.5vw, 1rem);
}

.auth-form {
  margin-bottom: var(--spacing-2xl);
}

.auth-footer {
  text-align: center;
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--gray-200);
  font-size: clamp(0.85rem, 1.5vw, 0.95rem);
}

.auth-footer a {
  color: var(--primary);
  text-decoration: none;
  font-weight: 600;
  transition: var(--transition);
}

.auth-footer a:hover {
  color: var(--primary-dark);
  text-decoration: underline;
}

/* ============================================
   CATEGORY TAGS
   ============================================ */
.category-tag {
  display: inline-block;
  padding: clamp(0.35rem, 1vw, 0.5rem) clamp(0.75rem, 1.5vw, 1rem);
  background: var(--gray-100);
  border-radius: var(--radius-full);
  font-size: clamp(0.8rem, 1vw, 0.9rem);
  font-weight: 500;
  color: var(--dark);
  margin-right: var(--spacing-xs);
  margin-bottom: var(--spacing-xs);
  cursor: pointer;
  transition: var(--transition);
}

.category-tag:hover {
  background: var(--primary);
  color: white;
}

.category-tag.active {
  background: var(--primary);
  color: white;
}

/* ============================================
   RESPONSIVE DESIGN
   ============================================ */

/* Tablets (768px and below) */
@media (max-width: 768px) {
  .sidebar {
    width: 100%;
    height: auto;
    position: relative;
    padding: var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: center;
    min-height: auto;
    margin-bottom: 0;
  }

  .sidebar h2 {
    margin: 0;
  }

  .sidebar nav {
    display: none;
  }

  .navbar {
    margin-left: 0;
    left: 0;
    top: auto;
    bottom: 0;
    width: 100%;
    height: 60px;
    padding: 0 var(--spacing-lg);
    z-index: 998;
  }

  .navbar h3 {
    font-size: clamp(0.95rem, 2vw, 1.1rem);
  }

  .navbar-right {
    gap: var(--spacing-md);
  }

  .profile-name {
    display: none;
  }

  .main-content {
    margin-left: 0;
    margin-top: 0;
    margin-bottom: 70px;
    padding: clamp(1rem, 3vw, 1.5rem);
  }

  .cards-grid {
    grid-template-columns: repeat(auto-fit, minmax(clamp(250px, 100%, 320px), 1fr));
  }

  .chart-container {
    overflow-x: auto;
  }

  .table {
    font-size: 0.8rem;
  }

  .table th,
  .table td {
    padding: clamp(0.5rem, 1.5vw, 0.75rem);
  }

  .btn {
    padding: clamp(0.4rem, 1vw, 0.6rem) clamp(0.8rem, 1.5vw, 1.2rem);
    font-size: clamp(0.8rem, 1vw, 0.9rem);
  }

  .auth-card {
    max-width: 100%;
  }

  .auth-card-wide {
    max-width: 100%;
  }
}

/* Mobile (480px and below) */
@media (max-width: 480px) {
  html {
    font-size: 14px;
  }

  h1 {
    font-size: clamp(1.4rem, 5vw, 1.75rem);
  }

  h2 {
    font-size: clamp(1.2rem, 4vw, 1.5rem);
  }

  h3 {
    font-size: clamp(1rem, 3vw, 1.25rem);
  }

  .sidebar {
    padding: var(--spacing-sm);
    gap: var(--spacing-sm);
  }

  .sidebar h2 {
    font-size: clamp(1rem, 3vw, 1.25rem);
    gap: var(--spacing-xs);
  }

  .navbar {
    height: 55px;
    padding: 0 var(--spacing-md);
  }

  .main-content {
    padding: clamp(0.75rem, 2vw, 1rem);
    margin-bottom: 65px;
  }

  .cards-grid {
    grid-template-columns: 1fr;
    gap: clamp(0.75rem, 2vw, 1rem);
  }

  .stat-card {
    padding: clamp(1rem, 2.5vw, 1.5rem);
  }

  .stat-card-value {
    font-size: clamp(1.4rem, 3vw, 1.75rem);
  }

  .chart-container {
    padding: clamp(1rem, 2vw, 1.5rem);
    margin-bottom: var(--spacing-lg);
  }

  .form-group {
    margin-bottom: var(--spacing-md);
  }

  .table {
    font-size: 0.75rem;
  }

  .table th,
  .table td {
    padding: clamp(0.4rem, 1vw, 0.6rem);
  }

  .btn {
    padding: clamp(0.35rem, 0.8vw, 0.5rem) clamp(0.75rem, 1.2vw, 1rem);
    font-size: clamp(0.75rem, 0.9vw, 0.85rem);
  }

  .btn-logout {
    padding: var(--spacing-sm);
  }

  .auth-card {
    padding: clamp(1.25rem, 4vw, 1.75rem);
    margin: var(--spacing-lg);
  }

  .auth-header {
    margin-bottom: var(--spacing-lg);
  }

  .auth-icon {
    width: clamp(40px, 8vw, 48px);
    height: clamp(40px, 8vw, 48px);
  }

  .alert {
    padding: clamp(0.6rem, 1.5vw, 0.8rem) clamp(0.8rem, 1.5vw, 1.2rem);
    font-size: clamp(0.8rem, 1.2vw, 0.9rem);
    gap: var(--spacing-sm);
  }

  /* Responsive grid for forms */
  [style*="display: grid"][style*="gridTemplateColumns"] {
    grid-template-columns: 1fr !important;
  }
}

/* Very Small Screens (320px and below) */
@media (max-width: 320px) {
  html {
    font-size: 13px;
  }

  .navbar h3 {
    display: none;
  }

  .profile-info {
    display: none;
  }

  .btn {
    width: 100%;
    margin-bottom: var(--spacing-sm);
  }

  .btn-sm {
    padding: clamp(0.3rem, 0.8vw, 0.45rem) clamp(0.6rem, 1vw, 0.9rem);
  }

  .table {
    font-size: 0.7rem;
  }

  .auth-card {
    padding: clamp(1rem, 3vw, 1.25rem);
  }
}
